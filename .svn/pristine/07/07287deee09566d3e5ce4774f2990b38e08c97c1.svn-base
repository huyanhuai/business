         </div>   
         <div class="code">
            <Button type="info" size="large" @click="Generatemothercode" style="background-color: rgb(82, 192, 199);">生成母码</Button>
         </div>

          <Modal
              v-model="modal1"
              title="生成母码"
              @on-ok="ok1"
              @on-cancel="cancel">
